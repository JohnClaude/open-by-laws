---
layout: 'act'
---

- content_for :title do
  = act.short_title

%header
  = partial 'header', locals: {act: act}
  = partial 'breadcrumbs', locals: {act: act, trail: []}

= partial 'notices', locals: {act: act}
= partial 'nav', locals: {act: act, tab: 'content'}

#content
  .row-fluid
    .span4
      %aside.toc
        = partial 'toc', locals: {act: act}
    .span8
      %article.an-container
        .title
          %h2&= act.short_title
          - unless act.is_a? ::AkomaNtoso::ByLaw
            %h3
              Act #{act.num} of #{act.year}

          - if act.publication
            %h4.published
              Published in
              &= act.publication['showAs']
              no.
              &= act.publication['number']
              on
              &= act.publication['date']

          - for event in act.amendment_events
            - amendment = AkomaNtoso::Act.from_uri(event.source['href'])
            &= amendment

        = act_to_html(act)

= partial 'definitions', locals: {act: act}
