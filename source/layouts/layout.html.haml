!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %title
      - if content_for?(:title)
        = yield_content(:title)
      - else
        &= current_page.data.title
    %meta(name="viewport" content="width=device-width,initial-scale=1")
    %link(rel="icon" type="image/png" href="/favicon.png")

    - if content_for?(:head)
      = yield_content(:head)

    = stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css', media: "screen, print"
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css', media: "screen, print"
    = stylesheet_link_tag 'main.css', media: "screen, print"
  %body
    /[if lt IE 7]
      %p.chromeframe
        You are using an outdated browser.
        %a(href="http://browsehappy.com/") Upgrade your browser today
        or
        %a(href="http://www.google.com/chromeframe/?redirect=true") install Google Chrome Frame
        to better experience this site.

    .container
      %header#header
        .navbar.navbar-inverse
          .navbar-inner
            %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar

            %a.brand(href='/')
              .hidden-phone Open By-laws South Africa
              .visible-phone Open By-laws ZA

            .nav-collapse.collapse
              %ul.nav
                %li
                  %a(href="/za/by-law/") By-laws
                %li
                  %a(href="/about.html") About
                %li
                  %a(href="/contact.html") Contact
                %li
                  %a(href="http://blog.openbylaws.org.za") Blog

              %form.navbar-search.pull-right(action="/search.html" method="get")
                %input.search-query(type="text" name="q" placeholder="Search")

      %section#main
        = yield

      %footer#footer
        .row-fluid
          .span3
            %nav
              %h5 By-laws
              %ul.unstyled
                %li
                  %a(href="/za/by-law/") Browse the By-laws
                %li
                  %a(href="https://github.com/longhotsummer/za-by-laws") By-laws on GitHub
                  %i.icon-github
              %ul.unstyled
                %li
                  %a(href="/about.html#disclaimer") Disclaimer
          .span3
            %nav
              %h5 Openbylaws.org.za
              %ul.unstyled
                %li
                  %a(href="https://twitter.com/OpenByLawsZA") @OpenByLawsZA
                %li
                  %a(href="/about.html") About
                %li
                  %a(href="/contact.html") Contact
              %ul.unstyled
                %li
                  %a(href="https://github.com/longhotsummer/openbylaws.org.za") Contribute on GitHub
                  %i.icon-github
          .span6
            %h5 License
            %a(rel="license" href="http://creativecommons.org/licenses/by/2.5/za/deed.en_US")
              %img(alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by/2.5/za/88x31.png")
            %p
              The HTML and XML legislation documents are licensed under
              a #{link_to('Creative Commons Attribution 2.5 South Africa License', 'http://creativecommons.org/licenses/by/2.5/za/deed.en_US', rel: 'license')}.

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'
    :javascript
      window.jQuery || document.write('<script src="/js/vendor/jquery-1.10.2.min.js"><\/script>')
    = javascript_include_tag '//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js'
    = javascript_include_tag '/js/main.js'

    - if environment == :build
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-3444003-4', 'openbylaws.org.za');
        ga('send', 'pageview');
